<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".RegisterActivity">

        <TextView
            android:id="@+id/title_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title"
            android:textColor="@color/buttons_color"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/input_user_name"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_reg_tx_vw" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_name_reg_tx_inp_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_name_reg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/user_name"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/email_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_email"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_reg_tx_inp_lay" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_reg_tx_inp_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_reg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/email"
                android:inputType="textWebEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/password_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_password"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_reg_tx_inp_lay" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_reg_tx_inp_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_reg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/password"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/conf_password_reg_tx_inp_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_reg_tx_inp_lay">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/conf_password_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/confirm_password"
                android:inputType="textPassword|textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/address_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_address"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conf_password_reg_tx_inp_lay" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address_reg_tx_inp_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address_reg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/address" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/telephone_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_telephone"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_reg_tx_inp_lay" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/telephone_reg_tx_inp_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telephone_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/telephone_rg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/telephone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/phone_reg_tx_vw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_phone"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telephone_reg_tx_inp_lay" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_reg_tx_inp_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_reg_tx_vw">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_reg_ed_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_layouts"
                android:hint="@string/phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/register_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/buttons_color"
            android:text="@string/register_button"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_reg_tx_inp_lay" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>